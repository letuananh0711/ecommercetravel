@model IEnumerable<Travel_G08.PhieuDatTour>
@{
    Layout = "~/Areas/Admin/Views/Shared/admin_layout.cshtml";
}
@if (Session["IsLogin"] == null)
{
    Response.Redirect("Login");
}
@section scripts
{
    <script type="text/javascript">
        function GetConfirmation() {
            var reply = confirm("Are you sure you want to delete this?");
            if (reply) {
                return true;
            }
            else {
                return false;
            }
        }
        $(document).ready(function () {
            keepSystemHeadingState();
        });
    </script>
}
<div id="right" style="width:1130px;height:560px;overflow:auto;">
    <div id="content">
        <div class="container">       
            <div class="conthead">
                <h2>Customer list:</h2>
             </div>
             <div class="contentbox">
             <ul class="breadcrumb">
                <li>@Html.ActionLink("Home page", "Index", "Admin")</li> /
                <li>@Html.ActionLink("Book tour", "DanhSach", "PhieuDatTour")</li> / 
            </ul>
                <table width="100%">
                    <thead>
                        <th>ID</th>
                        <th>Tour</th>
                        <th>Customer</th>
                        <th width="10px">Booking date</th>
                        <th width="5px">Adult</th>
                        <th width="5px">Child</th>
                        <th width="5px">Kid</th>
                        <th>Total price</th>
                        <th>Status</th>
                        <th width="100px">Note</th>
                        <th>Action</th>
                        <th><input name="" value="" id="checkboxall" type="checkbox"></th>
                    </thead>
                    <tbody>
                        @if (ViewBag.count == 0)
                        {
                            <tr>
                                <td colspan="12">No result found.</td>
                            </tr>
                        }
                        else
                        {
                            int i = 0;
                            foreach (var s in Model)
                            {
                                if (i % 2 == 0)
                                {
                                    <tr class="alt">
                                       <td>@s.maPhieuDatTour</td>
                                        <td>@s.Tour.tenTour</td>
                                        <td>@s.KhachHang.hoTen</td>
                                        <td>@s.ngayDat</td>
                                        <td>@s.soNguoiLon</td>
                                        <td>@s.soTreEm</td>
                                        <td>@s.soTreNho</td>
                                        <td>@s.tongTien</td>
                                        <td>@s.trangThai</td>
                                        <td>@s.ghiChu</td>
                                       <td align="center">                  
                                            <a href="@Url.Action("DanhSachNguoiThamGiaTour", "PhieuDatTour", new { ID = @s.maPhieuDatTour })" title="Show detail"><img src="../../../Content/img/icon_username.png" alt="Show detail"></a> 
                                            <a href="@Url.Action("Sua", "PhieuDatTour", new { ID = @s.maPhieuDatTour })" title="Edit"><img src="../../../Content/img/icon_edit.png" alt="Edit"></a>                                      
                                        </td>  
                                            <td><input value="" name="checkall" type="checkbox"/></td>   
                                    </tr>
                                    i++;
                                }
                                else
                                {
                                   <tr>
                                       <td>@s.maPhieuDatTour</td>
                                        <td>@s.Tour.tenTour</td>
                                        <td>@s.KhachHang.hoTen</td>
                                        <td>@s.ngayDat</td>
                                        <td>@s.soNguoiLon</td>
                                        <td>@s.soTreEm</td>
                                        <td>@s.soTreNho</td>
                                        <td>@s.tongTien</td>
                                        <td>@s.trangThai</td>
                                        <td>@s.ghiChu</td>
                                       <td align="center">                  
                                            <a href="@Url.Action("DanhSachNguoiThamGiaTour", "PhieuDatTour", new { ID = @s.maPhieuDatTour })" title="Show detail"><img src="../../../Content/img/icon_username.png" alt="Show detail"></a> 
                                            <a href="@Url.Action("Sua", "PhieuDatTour", new { ID = @s.maPhieuDatTour })" title="Edit"><img src="../../../Content/img/icon_edit.png" alt="Edit"></a>                                      
                                        </td>  
                                            <td><input value="" name="checkall" type="checkbox"/></td>   
                                    </tr>
                                       i++;
                                }
                            }
                        }
                    </tbody>
                </table>
                 <div class="pagination clearfix">
                    @if ((string)ViewData["pageLinks"] != "")
                    {
                        <ul>
                            @Html.Raw(ViewBag.pageLinks)
                        </ul>
                        <br />
                        <br />
                    }
                </div>
             </div>
        </div>
    </div>
</div>