@model IEnumerable<Travel_G08.DanhSachNguoiThamGiaTour>
@{
    Layout = "~/Areas/Admin/Views/Shared/admin_layout.cshtml";
}
@if (Session["IsLogin"] == null)
{
    Response.Redirect("Login");
}
@section scripts
{
    <script type="text/javascript">
        function GetConfirmation() {
            var reply = confirm("Are you sure you want to delete this?");
            if (reply) {
                return true;
            }
            else {
                return false;
            }
        }
        $(document).ready(function () {
            keepSystemHeadingState();
        });
    </script>
}
<div id="right" style="width:1130px;height:560px;overflow:auto;">
    <div id="content">
        <div class="container">       
            <div class="conthead">
                <h2>Customer list:</h2>
             </div>
             <div class="contentbox">
             <ul class="breadcrumb">
                <li>@Html.ActionLink("Home page", "Index", "Admin")</li> /
                <li>@Html.ActionLink("Book tour", "DanhSach", "PhieuDatTour")</li> / 
                <li>@Html.ActionLink("List passenger", "DanhSachNguoiThamGiaTour", "PhieuDatTour")</li>
            </ul>
                <table width="100%">
                    <thead>
                        <th>Name</th>
                        <th>DOB</th>
                        <th>Address</th>
                        <th>Gender</th>
                        <th>Age</th>
                    </thead>
                    <tbody>
                        @if (ViewBag.count == 0)
                        {
                            <tr>
                                <td colspan="5">No result found.</td>
                            </tr>
                        }
                        else
                        {
                            int i = 0;
                            foreach (var s in Model)
                            {
                                if (i % 2 == 0)
                                {
                                    <tr class="alt">
                                        <td>@s.hoTenKhachHang</td>
                                        <td>@s.ngaySinh</td>
                                        <td>@s.diaChi</td>
                                        <td>@s.gioiTinh</td>
                                        <td>@s.doTuoi</td> 
                                    </tr>
                                       i++;
                                }
                                else
                                {
                                   <tr class="alt">
                                       <td>@s.hoTenKhachHang</td>
                                        <td>@s.ngaySinh</td>
                                        <td>@s.diaChi</td>
                                        <td>@s.gioiTinh</td>
                                        <td>@s.doTuoi</td> 
                                    </tr>
                                       i++;
                                }
                            }
                        }
                    </tbody>
                </table>
             </div>
        </div>
    </div>
</div>