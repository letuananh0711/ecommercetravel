<!DOCTYPE html>

<html>
<head>
    <title>@ViewBag.Title</title>
    <link href="@Url.Content("~/Content/login_form.css")" rel="Stylesheet" type="text/css"/>
    <link href="@Url.Content("~/Content/main.css")" rel="Stylesheet" type="text/css"/>
