@*<h2>@ViewBag.Message</h2>*@

<!-- Main body -->
    @if (ViewBag.Error != null)
    {
        <div class="status error">
            <p class="closestatus"><a href="" title="Close">x</a></p>
            <p><img src="../Content/img/icon_error.png" alt="Error">
	        <span>Error! @ViewBag.Error</span></p>
        </div>
    }
<div class="loginForm">
    <form class="login active" name="loginForm" action="/Account/Login" method="post">
	    <h3>Login</h3>
        <div>
            <label>Email:</label>
            <input name="email" type="text" required="required" placeholder="your email" />
        </div>
        <div>
            <label>Password: <a href="#" rel="forgot_password" class="forgot linkform">Forgot your password ?</a></label>
            <input name="password" type="password" required="required" placeholder="eg. X8df!90EO"/>
        </div>
        <div class="bottom">
            <div class="remember"><input type="checkbox" /><span>Keep me logged in</span></div>
            <input type="submit" value="Login" />
            <a href="/Account/Register" rel="register" class="linkform">You don't have an account yet ? Register here</a>
            <div class="clear"></div>
        </div>
    </form>
</div>