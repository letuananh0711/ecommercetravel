<div class="registerForm">
	<form class="register active" name="registerForm" action="/Account/Register" method="post" onsubmit="return validateForm()">
		<h3>Create an account</h3>
		<div class="column">
			<h4>Login information</h4>
			<div>
				<label>Email:<span class="redtext">*</span></label>
				<input type="email" required="required" name="email"  placeholder="Your email address"/>
			</div>
			<div>
				<label>Password:<span class="redtext">*</span></label>
				<input type="password" required="required" name="password" placeholder="Enter a password"/>
			</div>
			<div>
				<label>Comfirm Password:<span class="redtext">*</span></label>
				<input type="password" required="required" name="confirm_password" placeholder="Retype your password"/>
			</div>
		</div>
		<div class="column">
			<h4>Personal information</h4>
			<div>
				<label>Full Name:<span class="redtext">*</span></label>
				<input type="text" required="required" name="name" placeholder="Your real name"/>
			</div>
			<div>
				<label>Address:</label>
				<input type="text" name="address" placeholder="Where you're living"/>
			</div>
			<div>
				<label>Phone Number:</label>
				<input type="text" name="phone" placeholder="Telephone or mobile number"/>
			</div>
		</div>
		<div class="column">
			<h4>Payment information</h4>
			<div>
				<label>Bank Account:</label>
				<input type="text" name="bank_account_ID" placeholder="Bank account number"/>
			</div>
		</div>
		<div class="bottom">
			<input type="submit" value="Register" />
			<a href="/Account/Login" rel="login" class="linkform">You have an account already ? Log in here</a>
			<div class="clear"></div>
		</div>
	</form>
</div>