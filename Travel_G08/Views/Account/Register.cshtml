@*@model Travel_G08.Models.RegisterModel*@

@{
    ViewBag.Title = "TRAVEL G08 Website - Sign up";
    Layout = "~/Content/Frontend/_layout.cshtml";
}

@section scripts
{
    <!-- Sign up -->
    <link href="@Url.Content("~/Content/Frontend/css/register.css")" type="text/css" rel="stylesheet"/>
    <link href="@Url.Content("~/Content/login_form.css")" rel="Stylesheet" type="text/css"/>
    <link href="@Url.Content("~/Content/main.css")" rel="Stylesheet" type="text/css"/>

    <!-- Check form sign up -->
    <script type="text/javascript">
        function validateForm() {
            var password = document.forms["registerForm"]["password"].value;
            var confirm_password = document.forms["registerForm"]["confirm_password"].value;
            var count = document.forms["registerForm"]["password"].value.length;
            
            if (confirm_password != password) {
                alert("The new password and confirmation password do not match.");
                return false;
            }

            if (count < 6) {
                alert("The password must be at least 6 characters long.");
                return false;
            }
        }
    </script>
}

